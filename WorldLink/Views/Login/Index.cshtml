@model Usuario;
@{
    ViewData["Title"] = "Login";
}
@section Styles{ 
    <link rel="stylesheet" href="~/css/login.css" />
}


<div class="login">

    <alert message="@TempData["msg"]"></alert>
    
    
    <div class="container">
        <form asp-action="Login" autocomplete="off">
            <img src="~/images/logo.svg" alt="World Link logo" />
            <p>Dashboard Administrativo</p>
            <div class="form-group">
                <input asp-for="Nome" placeholder="Usuário" />
                <span asp-validation-for="Nome"></span>
            </div>
            <div class="form-group">
                <input asp-for="Senha" placeholder="Senha" />
                <span asp-validation-for="Senha"></span>
            </div>
            <input type="submit" value="Login" />

            <span>* Usuario: <strong>admin</strong> - Senha: <strong>admin</strong></span>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js">
    </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js">
    </script>
}