@model Contato;
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Cadastrar">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <input type="submit" value="Receber Novidades" class="btn btn-primary" />
</form>

<span>@TempData["success-msg"]</span>
<span>@TempData["error-msg"]</span>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js">
    </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js">
    </script>
}